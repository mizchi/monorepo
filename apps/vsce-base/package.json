{
  "name": "vsce-base",
  "version": "1.0.0",
  "description": "vsce-base",
  "engines": {
    "vscode": "^1.22.0"
  },
  "icon": "assets/logo.png",
  "main": "./out/index.js",
  "scripts": {
    "build": "esbuild --bundle --minify --outdir=out --sourcemap src/index.ts --define:import.meta.vitest=undefined",
    "watch": "esbuild --bundle --minify --outdir=out --sourcemap --define:import.meta.vitest=undefined --watch src/index.ts",
    "package": "vsce package --no-dependencies",
    "publish": "dotenv -e .env pnpm vsce publish --no-dependencies",
    "test": "pnpm test:vitest && pnpm test:vscode",
    "test:vitest": "vitest src --run",
    "test:vscode": "pnpm tsc -p tsconfig.test.json && NODE_ENV=development node _compiled/test/run.cjs"
  },
  "activationEvents": [],
  "contributes": {
    "configuration": {}
  },
  "keywords": [],
  "author": "miz404@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@vscode/test-electron": "^2.3.4",
    "@vscode/vsce": "^2.20.1",
    "dotenv-cli": "^7.3.0",
    "esbuild": "^0.19.2",
    "glob": "^10.3.4",
    "mocha": "^10.2.0",
    "vscode": "^1.1.37"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mizchi/vscode-ext-base"
  }
}
