{
  "formatter": {
    "enabled": true,
    "indentSize": 2,
    "indentStyle": "space",
    "ignore": [
      "node_modules/**",
      "dist/**",
      ".turbo/**",
      "styled-system/**",
      ".vscode-test/**",
      "_compiled/**"
    ]
  },
  "linter": {
    "enabled": true,
    "ignore": [
      "node_modules/**",
      "dist/**",
      ".turbo/**",
      "styled-system/**",
      ".vscode-test/**",
      "_compiled/**"
    ],
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off"
      },
      "style": {
        "noNonNullAssertion": "off"
      }
    }
  }
}
